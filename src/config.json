{
    "agent": {
            "metrics_collection_interval": 60,
            "logfile": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log"
    },
    "logs": {
            "logs_collected": {
                    "files": {
                            "collect_list": [
                                    {
                                            "file_path": "/var/log/wax/logs.log",
                                            "log_group_name": "/waxnode/",
                                            "log_stream_name": "logs",
                                            "timezone": "UTC"
                                    }
                            ]
                    }
            },
            "log_stream_name": "logs",
            "force_flush_interval" : 60
    }
}